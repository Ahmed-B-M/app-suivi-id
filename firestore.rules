/**
 * @fileoverview Firestore Security Rules for Prototyping.
 *
 * Core Philosophy:
 * This ruleset provides completely open access to all data. This is suitable only for prototyping
 * environments where authentication and authorization are not yet implemented.
 *
 * WARNING:
 * These rules grant full read and write access to your Firestore database.
 * This configuration is not suitable for production environments.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants full read and write access to all documents in the 'tasks' collection.
     * @path /tasks/{taskId}
     * @allow (get, list, create, update, delete) - Any unauthenticated user.
     * @deny None. All operations are permitted.
     * @principle Grants open access to all documents in the 'tasks' collection.
     */
    match /tasks/{taskId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants full read and write access to all documents in the 'rounds' collection.
     * @path /rounds/{roundId}
     * @allow (get, list, create, update, delete) - Any unauthenticated user.
     * @deny None. All operations are permitted.
     * @principle Grants open access to all documents in the 'rounds' collection.
     */
    match /rounds/{roundId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants full read and write access to all documents in the 'categorized_comments' collection.
     * @path /categorized_comments/{taskId}
     * @allow (get, list, create, update, delete) - Any unauthenticated user.
     * @deny None. All operations are permitted.
     * @principle Grants open access to all documents in the 'categorized_comments' collection.
     */
    match /categorized_comments/{taskId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants full read and write access to all documents in the 'nps_data' collection.
     * @path /nps_data/{date}
     * @allow (get, list, create, update, delete) - Any unauthenticated user.
     * @deny None. All operations are permitted.
     * @principle Grants open access to all documents in the 'nps_data' collection.
     */
    match /nps_data/{date} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Grants full read and write access to all documents in the 'processed_nps_verbatims' collection.
     * @path /processed_nps_verbatims/{taskId}
     * @allow (get, list, create, update, delete) - Any unauthenticated user.
     * @deny None. All operations are permitted.
     * @principle Grants open access to all documents in the 'processed_nps_verbatims' collection.
     */
    match /processed_nps_verbatims/{taskId} {
      allow get, list, create, update, delete: if true;
    }
  }
}