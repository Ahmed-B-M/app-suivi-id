rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règle globale : Autorise tout utilisateur authentifié à effectuer n'importe quelle action
    // (lecture, création, modification, suppression) sur n'importe quel document.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
